<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Coffee" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimarySurface">@color/white</item>
        <item name="colorOnPrimaryFixed">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_brown</item>
        <item name="colorSecondaryVariant">@color/brown</item>
        <item name="colorOnSecondary">@color/brown</item>
        <!-- Фон всплывающих меню -->
        <item name="android:itemBackground">?attr/colorOnPrimary</item>
        <!-- TextColor -->
        <item name="android:textColor">@color/brown</item>
        <!-- Верхняя панель. -->
        <item name="android:statusBarColor">@color/gray</item>
        <!-- Нижняя панель. -->
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s" tools:ignore="NewApi">
            ?attr/colorPrimary
        </item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/ic_launcher_foreground
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">200</item>
    </style>

    <style name="Theme.Coffee" parent="Base.Theme.Coffee" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>